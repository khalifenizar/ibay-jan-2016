<h1 class="page-heading">Nizar's Auction House</h1>

<h2>Add a new product</h2>

<%= form_for(@product) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %>

  <button type="submit">
    Add product
  </button>
<% end %>
